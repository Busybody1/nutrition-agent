# =============================================================================
# NUTRITION AGENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8006
CORS_ORIGINS=*

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================
# Main agent database for sessions and conversations
DATABASE_URL=postgresql://username:password@localhost:5432/nutrition_agent_db

# User management and authentication database
USER_DATABASE_URI=postgresql://username:password@localhost:5432/user_fitness_app

# Nutrition reference database (read-only)
NUTRITION_DB_URI=postgresql://username:password@localhost:5432/food_nutrition_db

# Workout reference database (read-only)
WORKOUT_DB_URI=postgresql://username:password@localhost:5432/workout_database

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# Cache TTL settings (in seconds)
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=3600    # 1 hour
CACHE_TTL_LONG=86400     # 24 hours

# =============================================================================
# GROQ AI INTEGRATION
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TIMEOUT=30

# =============================================================================
# OPENAI AI INTEGRATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TIMEOUT=60
OPENAI_MAX_TOKENS=16000

# =============================================================================
# DATABASE CONNECTION POOL SETTINGS
# =============================================================================
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_CONNECT_TIMEOUT=10

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# NUTRITION-SPECIFIC SETTINGS
# =============================================================================
# Default nutrition goals (calories, protein, carbs, fat)
DEFAULT_CALORIE_GOAL=2000
DEFAULT_PROTEIN_GOAL=150
DEFAULT_CARB_GOAL=200
DEFAULT_FAT_GOAL=65

# Nutrition analysis settings
NUTRITION_ANALYSIS_TIMEOUT=60
FOOD_RECOGNITION_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=nutrition_agent.log
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
RELOAD=true
WORKERS=1
ENABLE_SWAGGER=true
ENABLE_REDOC=true
